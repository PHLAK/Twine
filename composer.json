{
    "name": "phlak/twine",
    "description": "String manipulation, leveled up!",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Kankiewicz",
            "email": "Chris@ChrisKankiewicz.com"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/PHLAK"
        },
        {
            "type": "paypal",
            "url": "https://paypal.me/ChrisKankiewicz"
        }
    ],
    "support": {
        "issues": "https://github.com/PHLAK/Twine/issues"
    },
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "php": ">=8.2",
        "phlak/coding-standards": "^4.0",
        "phpstan/phpstan": "^2.0",
        "psy/psysh": "^0.12",
        "yoast/phpunit-polyfills": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PHLAK\\Twine\\": "src/"
        },
        "files": ["src/Support/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "PHLAK\\Twine\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
